{
  "compilerOptions": {
    "module": "ES2022",
    "target": "ES2022",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "Bundler",
    "outDir": "./js",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "types": [
      "@types/node"
    ],
    "rootDir": "./ts",
    "declaration": true,
    "noImplicitAny": true,
    "strict": true
  },
  "tsc-alias": {
    "resolveFullPaths": true,
    "resolveFullExtension": ".js"
  },
  "include": [
    "ts/*",
  ],
  "exclude": [
    "node_modules",
  ]
}